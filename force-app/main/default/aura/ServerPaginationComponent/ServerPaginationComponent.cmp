<aura:component controller="ServerPaginationApexController" implements="force:appHostable">
    <aura:attribute name="objName" type="List"/>
    <aura:attribute name="totalRecordSize" type="Integer"/>
    <aura:attribute name="selectedPageSize" type="Integer"/>
    <aura:handler name="init" value="{!this}" action="{!c.fetchList}" />
        
    total size = {!v.totalRecordSize}
    <table class="slds-table slds-table_bordered slds-table_cell-buffer">
        <thead>
            <tr class="slds-text-title_caps">
                <th scope="col">
                    <strong><div class="slds-truncate" title="ID">ID</div></strong>
                </th>
                <th scope="col">
                    <strong><div class="slds-truncate" title="NAME">NAME</div></strong>
                </th>
                <th scope="col">
                    <strong><div class="slds-truncate" title="PHONE">PHONE</div></strong>
                </th>
            </tr>
        </thead>
        <tbody>
            <aura:iteration items="{!v.objName}" var="obj"> 
                <tr>
                    <th scope="row" data-label="Id">
                        <div class="slds-truncate" >{!obj.Id}</div>
                    </th>
                    <th scope="row" data-label="Name">
                        <div class="slds-truncate" >{!obj.Name}</div>
                    </th>
                    <th scope="row" data-label="Phone">
                        <div class="slds-truncate" >{!obj.Phone}</div>
                    </th>
                    
                </tr>
            </aura:iteration> 
        </tbody>
    </table>
    
    <div class="slds-float_right">
            <ui:inputSelect aura:id="pageSize" label="Display Records Per Page: " change="{!c.onSelectChange}">
                <ui:inputSelectOption text="10" label="10" value="true"/>
                <ui:inputSelectOption text="15" label="15"/>
                <ui:inputSelectOption text="20" label="20"/>
            </ui:inputSelect>
            <br/>
        </div>
         Page Size===={!v.selectedPageSize}
    
</aura:component>